{
	"name": "himaque-application",
	"version": "4.3.0",
	"description": "application of HIMACHATQUEST",
	"main": "./src/main.js",
	"scripts": {
		"start": "electron ./src",
		"build-mac": "electron-builder -m --univarsal",
		"build-win": "electron-builder -w --x64",
		"build-linux": "electron-builder -l",
		"build-all": "electron-builder -wml"
	},
	"dependencies": {
		"electron-store": "^10.x",
		"node-fetch": "^2.7.0"
	},
	"devDependencies": {
		"electron": "28",
		"electron-builder": "^26.x"
	},
	"build": {
		"appId": "electron.himaqueapp.meteor",
		"productName": "Meteor",
		"directories": {
			"output": "dist"
		},
		"files": [
			"assets",
			"src",
			"package.json",
			"package-lock.json"
		],
		"linux": {
			"icon": "assets/icon.png",
			"target": [
				"AppImage"
			],
			"category": "Game"
		},
		"mac": {
			"icon": "assets/icon.icns",
			"target": [
				"dmg"
			]
		},
		"win": {
			"icon": "assets/icon.ico",
			"target": "nsis"
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"publish": null
	},
	"author": "eita(No.16762) <sgr.9661.ea@gmail.com>",
	"homepage": "https://addon.pjeita.top/"
}
