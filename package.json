{
	"name": "himaque-application",
	"version": "5.2.0",
	"description": "application of HIMACHATQUEST",
	"main": "./src/main.js",
	"scripts": {
		"start": "electron ./src/main.js",
		"build": "electron-builder",
		"build-mac": "electron-builder -m --univarsal",
		"build-win": "electron-builder -w --x64",
		"build-linux": "electron-builder -l",
		"build-all": "electron-builder -wml"
	},
	"dependencies": {
		"electron-store": "8.x",
		"electron-updater": "^6.6.2",
		"node-fetch": "^2.7.0"
	},
	"devDependencies": {
		"electron": "^28.3.3",
		"electron-builder": "^26.x"
	},
	"build": {
		"appId": "electron.himaqueapp.meteor",
		"productName": "Meteor",
		"directories": {
			"output": "release"
		},
		"files": [
			"assets",
			"src",
			"package.json",
			"package-lock.json"
		],
		"linux": {
			"icon": "assets/icon.png",
			"target": [
				{
					"target": "AppImage",
					"arch": [
						"x64",
						"armv7l",
						"arm64"
					]
				}
			],
			"category": "Game"
		},
		"mac": {
			"icon": "assets/icon.icns",
			"target": [
				{
					"target": "dmg",
					"arch": [
						"x64"
					]
				},
				{
					"target": "pkg",
					"arch": [
						"universal"
					]
				}
			]
		},
		"win": {
			"icon": "assets/icon.ico",
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64"
					]
				}
			]
		},
		"nsis": {
			"oneClick": false,
			"allowToChangeInstallationDirectory": true
		},
		"publish": [
			{
				"provider": "github",
				"owner": "noir-chat-9661",
				"repo": "himaque-application"
			}
		]
	},
	"author": "eita(No.16762) <sgr.9661.ea@gmail.com>",
	"homepage": "https://addon.pjeita.top/"
}
